<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cn.edu.tju.scs.tv.domain">

<class name="Comment" table="comment">
    <id name="commentId" type="java.lang.Integer">
        <column name="COMMENT_ID" not-null="true" sql-type="int(11)"/>
        <!--  //字段自增-->
        <generator class="native"/>
    </id>

    <property name="content" type="java.lang.String"  not-null="true">
        <column name="CONTENT" not-null="true" sql-type="varchar(255)"/>
    </property>

    <property name="createtime" type="java.sql.Timestamp" not-null="false">
        <column name="CREATE_TIME" sql-type="timestamp" default="CURRENT_TIMESTAMP" not-null="false"/>
    </property>

    <property name="videoId" type="java.lang.Integer" not-null="true">
        <column name="REF_VIDEO_ID" sql-type="int(11)" not-null="true"/>
    </property>

    <!-- unique="true"保证了外键在Person表中的唯一 -->
    <many-to-one name="user"  class="User" not-null="true" lazy="false">
        <column name="REF_USER_ID" sql-type="int(11)" not-null="true"/>
    </many-to-one>

</class>

</hibernate-mapping>